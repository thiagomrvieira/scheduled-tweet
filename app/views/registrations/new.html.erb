<h1> Sign up </h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
    <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "thiagomrvieira@gmail.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "teste@123" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "teste@123" %>
    </div>
    
    <div class="mb-3">
        <%= form.submit "Get started", class: "btn btn-primary" %>
    </div>

<% end %>